<component name="functions" type="synapse/template">
    <subComponents>
        <component name="createAsset">
            <file>createAsset.xml</file>
            <description>Creates a new content asset.</description>
        </component>
        <component name="createContact">
            <file>createContact.xml</file>
            <description>Adds a new contact.</description>
        </component>
        <component name="createJourney">
            <file>createJourney.xml</file>
            <description>Creates a new interaction (journey).</description>
        </component>
        <component name="createPushMessage">
            <file>createPushMessage.xml</file>
            <description>Creates a push message template for sending to a list of subscribers or an audience inclusion list or data extension.</description>
        </component>
        <component name="getAssets">
            <file>getAssets.xml</file>
            <description>Fetches a list of all content assets.</description>
        </component>
        <component name="getContactDeleteRequests">
            <file>getContactDeleteRequests.xml</file>
            <description>Retrieves data deletion requests, important for ensuring GDPR and other data privacy compliance.</description>
        </component>
        <component name="getJourneys">
            <file>getJourneys.xml</file>
            <description>Retrieves all journey interactions.</description>
        </component>
        <component name="importData">
            <file>importData.xml</file>
            <description>Initiates an asynchronous data import.</description>
        </component>
        <component name="sendEmailMessage">
            <file>sendEmailMessage.xml</file>
            <description>Sends an email message.</description>
        </component>
        <component name="sendSMSMessage">
            <file>sendSMSMessage.xml</file>
            <description>Sends an SMS message.</description>
        </component>
    </subComponents>
</component>
