<template xmlns="http://ws.apache.org/ns/synapse" name="getContactDeleteRequests">
    <parameter name="startdateutc" description="Start date and time in UTC of the date range."/>
    <parameter name="enddateutc" description="End date and time in UTC of the date range."/>
    <parameter name="statusid" description="Delete request status ID."/>
    <parameter name="$page" description="Page number to return from the paged results."/>
    <parameter name="$pagesize" description="Number of results per page to return."/>
    <parameter name="$orderBy" description="Determines which asset property to use for sorting, and also determines the direction in which to sort the data."/>
    <sequence>
        <class name="org.wso2.carbon.salesforce.marketingcloud.connector.RestURLBuilder">
            <property name="operationPath" value="/contacts/v1/contacts/analytics/deleterequests"/>
            <property name="queryParameters" value="startdateutc,enddateutc,statusid,$page,$pagesize,$prderBy,"/>
        </class>
        <header name="Accept" value="application/json" scope="transport" action="set"/>
        <call>
            <endpoint>
                <http method="GET" uri-template="{uri.var.base}{+uri.var.urlPath}{+uri.var.urlQuery}"/>
            </endpoint>
        </call>
    </sequence>
</template>
