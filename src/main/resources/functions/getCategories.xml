<template xmlns="http://ws.apache.org/ns/synapse" name="getCategories">
    <parameter name="page" description="Page number to return from the paged results."/>
    <parameter name="pagesize" description="Number of results per page to return."/>
    <parameter name="orderBy" description="Determines which category property to use for sorting, and also determines the direction in which to sort the data."/>
    <parameter name="filter" description="Filter by ParentId using a simple operator and value."/>
    <sequence>
        <class name="org.wso2.carbon.salesforce.marketingcloud.connector.RestURLBuilder">
            <property name="operationPath" value="/asset/v1/content/categories"/>
            <property name="queryParameters" value="page,pagesize,orderBy,filter,"/>
        </class>
        <header name="Accept" value="application/json" scope="transport" action="set"/>
        <call>
            <endpoint>
                <http method="GET" uri-template="{uri.var.base}{+uri.var.urlPath}{+uri.var.urlQuery}"/>
            </endpoint>
        </call>
    </sequence>
</template>
